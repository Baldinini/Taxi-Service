<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.academy.controllers.IndexController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allDrivers</servlet-name>
        <servlet-class>mate.academy.controllers.driver.GetAllDriversController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allDrivers</servlet-name>
        <url-pattern>/drivers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>driversCreation</servlet-name>
        <servlet-class>mate.academy.controllers.driver.AddDriverController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>driversCreation</servlet-name>
        <url-pattern>/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteDriver</servlet-name>
        <servlet-class>mate.academy.controllers.driver.DeleteDriverController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteDriver</servlet-name>
        <url-pattern>/drivers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allManufacturer</servlet-name>
        <servlet-class>mate.academy.controllers.manufacturer.GetAllManufacturersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allManufacturer</servlet-name>
        <url-pattern>/manufacturers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>manufacturersCreation</servlet-name>
        <servlet-class>mate.academy.controllers.manufacturer.AddManufacturerController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>manufacturersCreation</servlet-name>
        <url-pattern>/manufacturers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteManufacturer</servlet-name>
        <servlet-class>mate.academy.controllers.manufacturer.DeleteManufacturerController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteManufacturer</servlet-name>
        <url-pattern>/manufacturers/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allCars</servlet-name>
        <servlet-class>mate.academy.controllers.car.GetAllCarsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allCars</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createCar</servlet-name>
        <servlet-class>mate.academy.controllers.car.AddCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createCar</servlet-name>
        <url-pattern>/cars/add</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>mate.academy.controllers.car.AddDriverToCarController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>deleteCar</servlet-name>
        <servlet-class>mate.academy.controllers.car.DeleteCarController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>deleteCar</servlet-name>
        <url-pattern>/cars/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginDriver</servlet-name>
        <servlet-class>mate.academy.controllers.driver.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>loginDriver</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>mate.academy.web.filters.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    <servlet>
        <servlet-name>carsByDriver</servlet-name>
        <servlet-class>mate.academy.controllers.driver.GetMyCurrentCarsController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>carsByDriver</servlet-name>
        <url-pattern>/drivers/cars</url-pattern>
    </servlet-mapping>
</web-app>
