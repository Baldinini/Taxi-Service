<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.academy.controllers.IndexController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allDrivers</servlet-name>
        <servlet-class>mate.academy.controllers.GetAllDriversController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allDrivers</servlet-name>
        <url-pattern>/driver/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>driversCreation</servlet-name>
        <servlet-class>mate.academy.controllers.AddDriverController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>driversCreation</servlet-name>
        <url-pattern>/driver/creation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteDriver</servlet-name>
        <servlet-class>mate.academy.controllers.DeleteDriverController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteDriver</servlet-name>
        <url-pattern>/driver/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allManufacturer</servlet-name>
        <servlet-class>mate.academy.controllers.GetAllManufacturersController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allManufacturer</servlet-name>
        <url-pattern>/manufacturer/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>manufacturersCreation</servlet-name>
        <servlet-class>mate.academy.controllers.AddManufacturerController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>manufacturersCreation</servlet-name>
        <url-pattern>/manufacturer/creation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteManufacturer</servlet-name>
        <servlet-class>mate.academy.controllers.DeleteManufacturerController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteManufacturer</servlet-name>
        <url-pattern>/manufacturer/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allCars</servlet-name>
        <servlet-class>mate.academy.controllers.GetAllCarsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allCars</servlet-name>
        <url-pattern>/car/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createCar</servlet-name>
        <servlet-class>mate.academy.controllers.AddCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createCar</servlet-name>
        <url-pattern>/car/creation</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>mate.academy.controllers.AddDriverToCarController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/car/driver/add</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>deleteCar</servlet-name>
        <servlet-class>mate.academy.controllers.DeleteCarController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>deleteCar</servlet-name>
        <url-pattern>/car/delete</url-pattern>
    </servlet-mapping>
</web-app>
